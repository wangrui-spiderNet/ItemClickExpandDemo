<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/table"
        style="@style/table"
        android:background="@drawable/shape2"
        android:layout_marginTop="0dp" >

        <TableRow
            android:id="@+id/tablerow01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv01"
                style="@style/textNormal"
                android:text="第一条：" />

            <TextView
                android:id="@+id/tv_repayCycle"
                style="@style/textNormal"
                android:singleLine="true"
                android:text="1" />
        </TableRow>

        <View style="@style/viewLine" />

        <TableRow
            android:id="@+id/tablerow02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv02"
                style="@style/textNormal"
                android:text="第二条：" />

            <TextView
                android:id="@+id/tv_total"
                style="@style/textNormal"
                android:singleLine="true"
                android:text="500" />
        </TableRow>

        <View
            android:id="@+id/splitLine1"
            style="@style/viewLine" />

        <TableRow
            android:id="@+id/tablerow03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv03"
                style="@style/textNormal"
                android:text="第三条：" />

            <TextView
                android:id="@+id/tv_repayDate"
                style="@style/textNormal"
                android:singleLine="true"
                android:text="20160121" />
        </TableRow>

        <View
            android:id="@+id/splitLine2"
            style="@style/viewLine" />

        <TableRow
            android:id="@+id/tablerow04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv04"
                style="@style/textNormal"
                android:text="第四条：" />

            <TextView
                android:id="@+id/tv_notRepayPrincipal"
                style="@style/textNormal"
                android:singleLine="true"
                android:text="500" />
        </TableRow>

        <View
            android:id="@+id/splitLine3"
            style="@style/viewLine" />

        <TableRow
            android:id="@+id/tablerow05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv05"
                style="@style/textNormal"
                android:text="第五条：" />

            <TextView
                android:id="@+id/tv_notRepayInterest"
                style="@style/textNormal"
                android:singleLine="true"
                android:text="5.35" />
        </TableRow>

        <TextView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="加载更多"
            android:paddingLeft="10dp"
           />
    </TableLayout>

</LinearLayout>